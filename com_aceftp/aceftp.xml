	<description>AceFTP is a smart, fast and lightweight file manager component. It operates from Joomla back-end so you don't have to use any FTP program anymore.</description>
	<administration>
		<menu img="components/com_aceftp/assets/images/icon-16-aceftp.png">AceFTP</menu>
		<files>
			<filename>aceftp.php</filename>
			<filename>index.html</filename>
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<folder>assets</folder>
			<folder>quixplorer</folder>
		</files>
		<languages>
			<language tag="en-GB">languages/en-GB.com_aceftp.ini</language>
			<language tag="en-GB">languages/en-GB.com_aceftp.sys.ini</language>
			<language tag="en-GB">languages/en-GB.com_aceftp.menu.ini</language>
		</languages>
	</administration>
	
	<scriptfile>script.aceftp.php</scriptfile>
